{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb/base",
        "eslint-config-prettier"
    ],
    "plugins": [
        "eslint-plugin-prettier"
        ],
    "parserOptions": {
        "ecmaVersion": 12, 
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "js": true,
            "modules": true
        }
    },
    
    "rules": {
        "import/extensions": [
            "error",
            { "js": "ignorePackages"}
        ],
        "indent": "off"
    },
    "overrides": [
        {
         "files": ["*.js", "*test.js"],
            "rules": {
               "no-unused-vars": "off",
               "no-undef": "off" 
            } 
        }
    ]
}